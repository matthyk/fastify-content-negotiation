  "description": "HTTP compliant content negotiation for Fastify",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run test:unit && npm run test:typescript",
    "test:unit": "tap",
    "test:typescript": "tsd",
    "lint": "standard | snazzy",
    "lint:fix": "standard --fix",
    "license-checker": "license-checker --production --onlyAllow=\"MIT;ISC;BSD-3-Clause;BSD-2-Clause\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matthyk/fastify-content-negotiation.git"
  },
  "keywords": [
    "Fastify",
    "HTTP",
    "content negotiation"
  ],
  "author": "Matthias Keckl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/matthyk/fastify-content-negotiation/issues"
  },
  "homepage": "https://github.com/matthyk/fastify-content-negotiation#readme",
  "devDependencies": {
    "@fastify/pre-commit": "^2.0.2",
    "@fastify/sensible": "^5.1.0",
    "@types/node": "^24.0.3",
    "@types/tap": "^18.0.0",
    "fastify": "^5.6.1",
    "find-my-way": "^9.0.0",
    "license-checker": "^25.0.1",
    "snazzy": "^9.0.0",
    "standard": "^17.0.0",
    "tap": "^21.0.2",
    "tsd": "^0.33.0"
  },
  "dependencies": {
    "fastify-plugin": "^5.0.1",
    "negotiator": "^1.0.0"
